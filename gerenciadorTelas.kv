WindowManager:
    PrimeiraTela:
    SegundaTela:

<PrimeiraTela>:
    name: 'primeira'
    EstruturaLivro:
        PrimeiraPagina:
    Button:
        text: '>'
        color: 0, 0, 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        background_normal: ''
        background_color: 1, 1, 1, 1
        size_hint: .03, .04
        pos_hint: {'center_x': .85, 'center_y': .134}
        on_release: app.root.current = 'segunda'

<SegundaTela>:
    name: 'segunda'
    EstruturaLivro:
    Button:
        text: '<'
        color: 0, 0, 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        background_normal: ''
        background_color: 1, 1, 1, 1
        size_hint: .03, .04
        pos_hint: {'center_x': .15, 'center_y': .134}
        on_release: app.root.current = 'primeira'





