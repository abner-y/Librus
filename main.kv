    Button:
        text: '<'
        color: 0, 0, 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        background_normal: ''
        background_color: 1, 1, 1, 1
