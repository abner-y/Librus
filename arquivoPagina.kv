<ArquivoPagina>:
    canvas.before:
        #Color:
         #   rgba: 1, 1, 1, .8
        Rectangle:
            size: self.size
          #  source: 'images/bronze-pattern.jpg'
        Quad:
            points: (self.width*0.1, self.height*0.9, self.width*0.9, self.height*0.9, self.width*0.9, self.height*0.1, self.width*0.1, self.height*0.1)
            source: 'images/fundo9.jpg'
        Quad:
            points: (self.width*0.1, self.height*0.95, self.width*0.15, self.height*0.95, self.width*0.2, self.height*0.9, self.width*0.1, self.height*0.9)
            source: 'images/fundo9.jpg'

        Quad:
            points: (self.width*0.15, self.height*0.85, self.width*0.85, self.height*0.85, self.width*0.85, self.height*0.15, self.width*0.15, self.height*0.15)
            source: 'images/fundo6.jpg'
        Color:
            rgba: 0, 0, 0, 1
        Line:
            points: (self.width*0.11, self.height*0.9, self.width*0.11, self.height*0.94)
            width: 1
        Line:
            points: (self.width*0.11, self.height*0.94, self.width*0.145, self.height*0.94)
            width: 1
    ListaArquivos:
    Button:
        font_size: dp(30)
        #font_name: 'fonts/Eurostile.ttf'
        text: "X"
        pos_hint: {'center_x': .875, 'center_y': .875}
        size_hint: .052, .052
        on_press:
            app.root.transition.direction = 'left'
            app.root.current = app.root.anterior
            root.resetarArquivos()
        background_normal: ''
        background_color: 1, .3, .4, .85
    Button:
        font_size: dp(30)
        #font_name: 'fonts/Eurostile.ttf'
        text: "+"
        pos_hint: {'center_x': .3, 'center_y': .875}
        size_hint: .052, .052
        on_press:
            root.adicionarArquivos(app.root.instancia.ids['id'])
        background_normal: ''
        background_color: 1, .3, .4, .85

    Button:
        font_size: self.width * 0.08
        #font_name: 'fonts/Eurostile.ttf'
        text: "Abrir pasta no explorador"
        pos_hint: {'center_x': .5, 'center_y': .875}
        size_hint: .3, .052
        on_press:
            root.abrirPastas(app.root.instancia.ids['id'])
        background_normal: ''
        background_color: 1, .3, .4, .85





