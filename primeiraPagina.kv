<PrimeiraPagina>:
    #caixaCasos: boxCasos
    Label:
        font_size: 0.06 * (self.height + self.width)
        text: 'Librus'
        pos_hint: {'center_x': .3, 'center_y': .6}
        color: 0, 0, 0
        font_name: 'fonts/Windsong.ttf'
    TextInput:
        id: caixaPesquisa
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1.2
                rectangle: self.x, self.y, self.width, self.height
        size_hint: .3, .05
        halign: 'left'
        hint_text:'#Pesquise Aqui'
        on_text_validate: root.parent.on_text_validate(self)
        multiline: False
        pos_hint: {'center_x': .3, 'center_y': .45}
        background_normal: ''
        background_color: 1, 1, 1, 0
    Label:
        id: criarcaso
        font_size: 0.035 * (self.height + self.width)
        text: 'Criar Caso'
        pos_hint: {'center_x': .3, 'center_y': .25}
        color: 0, 0, 0
        font_name: 'fonts/Windsong.ttf'
    #Display caso template

    ViewCasos:

    Button:

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1.2
                rectangle: self.x, self.y, self.width, self.height
        size_hint: .05, .05
        pos_hint: {'center_x': .425, 'center_y': .45}
        background_normal: ''
        background_color: 0, 0, 0, 0
        on_press:
            root.parent.pesquisa(root.ids.caixaPesquisa.text)
            root.parent.manager.transition.direction = 'left'
            root.parent.manager.current = 'terceira'
        Image:
            source: 'images/icons/lupa-menor.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y



    Button:
        text: '+'
        color: 0, 0, 0
        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 2
                rectangle: self.x, self.y, self.width, self.height
        on_press:
            root.parent.criarCaso()
            root.parent.manager.transition.direction = 'left'
            root.parent.manager.current = 'quarta'
        background_normal: ''
        background_color: 1, 1, 1, 1
        size_hint: .03, .04
        pos_hint: {'center_x': .42, 'center_y': .265}

