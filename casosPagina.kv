<CasosPagina>:
    CaixaTitulo:
        TextInput:
            id: nomeCap
            font_size: 40
            text: app.tituloCaso
            pos_hint: {'center_x': .3, 'center_y': .6}
            color: 0, 0, 0
            font_name: 'fonts/Windsong.ttf'
            background_color: (0, 0, 0, 0)
            disabled: True
            disabled_foreground_color: (0, 0, 0, 1)
    ScrollView:
        size_hint_x: 0.35
        size_hint_y: 0.7
        pos_hint: {'center_x': 0.7, 'center_y': .46}
        do_scroll_x: False
        TextInput:
            id: descCap
            font_size: 20
            text: app.descCaso
            color: 0, 0, 0
            background_color: (0, 0, 0, 0)
            size_hint_y: None
            disabled: True
            disabled_foreground_color: (0, 0, 0, 1)
            height: 1000



<CaixaTitulo>:
    id: boxTitulo
    orientation: 'vertical'
    size_hint_x: 0.35
    size_hint_y: 0.5
    pos_hint: {'center_x': .4, 'center_y': .55}





