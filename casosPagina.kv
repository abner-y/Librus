<CasosPagina>:
    #descCaso: descCaso
    CaixaTitulo:
        TextInput:
            id: nomeCap
            font_size: 20
            text: app.tituloCaso
            pos_hint: {'center_x': .3, 'center_y': .6}
            color: 0, 0, 0
            #font_name: 'fonts/Windsong.ttf'
            background_color: (0, 0, 0, 0)
            disabled: True
            disabled_foreground_color: (0, 0, 0, 1)
    ScrollView:
        size_hint_x: 0.35
        size_hint_y: 0.6
        pos_hint: {'center_x': 0.7, 'center_y': .48}
        do_scroll_x: False
        TextInput:
            id: descCap
            font_size: 20
            text: app.descCaso
            color: 0, 0, 0
            background_color: (0, 0, 0, 0)
            size_hint_y: None
            disabled: True
            disabled_foreground_color: (0, 0, 0, 1)
            height: 1000


    Button:

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1.5
                rectangle: self.x, self.y, self.width, self.height
        size_hint: .05, .06
        pos_hint: {'center_x': .42, 'center_y': .16}
        background_normal: ''
        background_color: 0, 0, 0, 0
        on_press:
            root.deletarCaso(app.root.instancia)
	        app.root.current = 'primeira'
        Image:
            source: 'images/icons/icon-deletev2.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y

    Button:

        canvas.before:
            Color:
                rgba: 0, 0, 0, 1
            Line:
                width: 1.5
                rectangle: self.x, self.y, self.width, self.height
        size_hint: .05, .06
        pos_hint: {'center_x': .35, 'center_y': .16}
        background_normal: ''
        background_color: 0, 0, 0, 0
        on_press:
            root.editarCaso(app.root.instancia)

        Image:
            source: 'images/icons/icon-edit.png'
            center_x: self.parent.center_x
            center_y: self.parent.center_y

<CaixaTitulo>:
    id: boxTitulo
    orientation: 'vertical'
    size_hint_x: 0.35
    size_hint_y: 0.35
    pos_hint: {'center_x': .37, 'center_y': .63}





